<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="shop-area-rent">
        <addColumn tableName="LEASE_CONTRACT">
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="shop-area-rent">
        <addColumn tableName="SHOP_AREA">
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="shop-area-rent">
        <addColumn tableName="USER_">
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
        </addColumn>
    </changeSet>
    <changeSet id="4" author="shop-area-rent">
        <addColumn tableName="LEASE_CONTRACT">
            <column name="VERSION" type="INT"/>
        </addColumn>

        <addNotNullConstraint columnName="VERSION" defaultNullValue="0" tableName="LEASE_CONTRACT"/>
    </changeSet>
    <changeSet id="5" author="shop-area-rent">
        <addColumn tableName="SHOP_AREA">
            <column name="VERSION" type="INT"/>
        </addColumn>

        <addNotNullConstraint columnName="VERSION" defaultNullValue="0" tableName="SHOP_AREA"/>
    </changeSet>
    <changeSet id="6" author="shop-area-rent">
        <createIndex indexName="IDX_UC_SHOP_AREA_NUMBER" tableName="SHOP_AREA" unique="true">
            <column name="NUMBER"/>
            <column name="DELETED_DATE"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>